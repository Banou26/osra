{
  "name": "osra",
  "version": "0.2.5",
  "description": "Easy communication between workers",
  "files": [
    "build"
  ],
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build-watch": "vite build --watch",
    "dev": "vitest --watch",
    "test": "vitest run",
    "test-watch": "vitest --watch",
    "test-ui": "vitest --ui",
    "test-headed": "vitest run --browser.headless=false",
    "test-with-coverage": "vitest run --coverage",
    "test-memory": "vitest run tests/browser/memory.test.ts --testTimeout=120000",
    "type-check": "tsgo --noEmit",
    "build-extension-test": "vite build --config vite.extension-test.config.ts",
    "build-extension-test-watch": "vite build --config vite.extension-test.config.ts --watch",
    "test-extension": "npm run build-extension-test && vitest run --config vitest.extension.config.ts",
    "test-extension-headed": "npm run build-extension-test && vitest run --config vitest.extension.config.ts --browser.headless=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Banou26/osra.git"
  },
  "author": "Banou26",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Banou26/osra/issues"
  },
  "homepage": "https://github.com/Banou26/osra#readme",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/chrome": "^0.1.27",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/node": "^25.0.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript/native-preview": "^7.0.0-dev.20251223.1",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-istanbul": "^4.0.17",
    "chai": "^5.3.3",
    "chai-as-promised": "^8.0.1",
    "typescript": "^5.9.3",
    "typescript-event-target": "^1.1.1",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-top-level-await": "^1.6.0",
    "vitest": "^4.0.17"
  }
}
