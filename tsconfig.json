{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "composite": false,
    "outDir": "./build",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
