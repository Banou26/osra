{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./build",
    "composite": false,
    "outDir": "./build",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "types": ["./tests/global-types.d.ts", "@types/chrome", "@types/firefox-webext-browser"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "tests",
    "test-results",
    "**/*.test.ts",
    "**/*.spec.ts",
    "*.config.ts",
    "vite.*.config.ts",
    "playwright.*.config.ts"
  ]
}
